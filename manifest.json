{
  "manifest_version": 3,
  "name": "WhatsApp Forward Killer",
  "version": "1.0",
  "description": "Combat fake news by fact-checking WhatsApp forwards in real-time",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://factchecktools.googleapis.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://vision.googleapis.com/*",
    "https://api.duckduckgo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "whatsapp-forward-killer@hackathon.com",
      "strict_min_version": "109.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}